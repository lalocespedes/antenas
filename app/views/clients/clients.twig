{% extends 'templates/main.twig' %}

{% block content %}
	
	 <div class="row">
        <div class="col-xs-12 col-sm-offset-3 col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading c-list">
                    <span class="title">Clientes</span>
                    <ul class="pull-right c-controls">
                        <li><a href="#cant-do-all-the-work-for-you" data-toggle="tooltip" data-placement="top" title="Add Contact"><i class="glyphicon glyphicon-plus"></i></a></li>
                        <li><a href="#" class="hide-search" data-command="toggle-search" data-toggle="tooltip" data-placement="top" title="Toggle Search"><i class="fa fa-ellipsis-v"></i></a></li>
                    </ul>
                </div>
                
                <div class="row" style="display: none;">
                    <div class="col-xs-12">
                        <div class="input-group c-search">
                            <input type="text" class="form-control" id="contact-list-search">
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="button"><span class="glyphicon glyphicon-search text-muted"></span></button>
                            </span>
                        </div>
                    </div>
                </div>

                {% if clients|length > 0 %}
                <ul class="list-group" id="contact-list">
                	{% for client in clients %}
                    <li class="list-group-item">
                        <div class="col-xs-12 col-sm-3">
                            <img src="/images/client.png" alt="Scott Stevens" class="img-responsive img-circle" />
                        </div>
                        <div class="col-xs-12 col-sm-9">
                            <span class="name"><a href="{{ urlFor('clients-show', {id: client.id})}}" title="">{{client.client_nombre}}</a></span><br/>
                            <span id="tooltip" class="fa fa-map-marker text-muted c-info" data-toggle="tooltip" title="{{client.direccion}}"></span>
                            <span class="visible-xs"> <span class="text-muted">{{client.client_calle}}</span><br/></span>
                            <span class="fa fa-phone text-muted c-info" data-toggle="tooltip" title="{{client.client_tel}}"></span>
                            <span class="visible-xs"> <span class="text-muted">{{client.client_tel}}</span><br/></span>
                            <span class="fa fa-mobile text-muted c-info" data-toggle="tooltip" title="{{client.client_celular}}"></span>
                            <span class="visible-xs"> <span class="text-muted">{{client.client_celular}}</span><br/></span>
                            <span class="fa fa-envelope-o text-muted c-info" data-toggle="tooltip" title="{{client.client_correo}}"></span>
                            <span class="visible-xs"> <span class="text-muted">{{client.client_correo}}</span><br/></span>
                        </div>
                        <div class="clearfix"></div>
                    </li>
                    {% endfor %}
                </ul>
                {% else %}
                    <h4 class="text-center">No hay clientes registrados.</h4>
                {% endif %} <!-- if users -->
                <div class="panel-footer">
                    <center>{{ clients.render|raw }}</center> 
                </div>
            </div>
        </div>
	</div>
{% endblock %}